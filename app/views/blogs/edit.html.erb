<h1>Edit</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@blog) do |f| %>
      <div>
        <%= f.text_field :title, class: 'form-control' , placeholder: "Title" %>
        <%= f.text_field :blog, class: 'form-control' , placeholder: "Blog" %>
      </div>
      <%= f.submit "Edit", class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
